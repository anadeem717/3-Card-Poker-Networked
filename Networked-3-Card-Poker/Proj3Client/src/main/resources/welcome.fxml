<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" style="-fx-background-color: #DCDCDC;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WelcomePageController">
    <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Welcome To THREE CARD POKER" />
    <VBox spacing="10">
        <HBox spacing="10">
            <Label style="-fx-font-size: 14px;" text="Server IP:" />
            <TextField fx:id="serverIpField" promptText="Enter server IP" style="-fx-background-color: white;" />
        </HBox>
        <HBox spacing="10">
            <Label style="-fx-font-size: 14px;" text="Port:" />
            <TextField fx:id="portField" promptText="Enter port" style="-fx-background-color: white;" />
        </HBox>
    </VBox>
    <Button onAction="#handleConnectToServer" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 16px;" text="Connect to server" />
</VBox>
